<!-- Begin Page Content -->

<div class="container-fluid">

  <!-- Page Heading -->
  <h1 class="h3 mb-2 text-gray-800">Tables</h1>
  <button type="submit" class="btn btn-primary portfolioBtn" data-toggle="modal" data-target="#addPortfolio">
    Add Portfolio
  </button>
  
  <!-- DataTales Example -->
  <div id="messageDiv" class="text-light"></div>
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <!-- <div id="portfolio-items"></div> -->
        <table class="table table-bordered" id="portfolioTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>Title</th>
              <th>Featured Image</th>
              <th>Description</th>
              <th>Status</th>
              <th>Delete / Edit</th>
            </tr>
          </thead>
          <tbody id="portfolioTableBody">
            <% portfolioItems.forEach(item => { %>
            <tr>
              <td><%= item.title %></td>
              <td><img src="<%= basePath + item.featuredimage %>" alt="<%= item.title %>" width="120"></td>
              <td><%= item.description %></td>
              <td class="text-center">
                <button class="status-toggle <%= item.status === true ? 'btn btn-success' : 'btn btn-danger' %>" data-item-id="<%= item._id %>">
                  <% if (item.status === true) { %>
                  Active
                  <% } else { %>
                  deActive
                  <% } %>
                </button>
              </td>
              <td class="text-center">
                <button class="btn btn-danger btn-circle deleteButton" data-item-id="<%= item._id %>">
                  <i class="fas fa-trash"></i>
                </button>
                <button class="btn btn-info btn-circle editButton" data-toggle="modal" data-target="#editPortfolio" data-id="<%= item._id %>">
                  <i class="fas fa-pencil-alt"></i>
                </button>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

</div>

